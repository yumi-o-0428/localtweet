<!DOCTYPE html>
<html>
  <head>
    <title>Localtweet</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
  <div class="header-logo">
    <%= link_to image_tag("logo.jpg",size: '340x90'),"/" %>
  </div>
  <ul class="header-menus">
    <li>
      <%= link_to("@LOCALとは", "/about") %>
    </li>
    <li>
      <%= link_to("新規投稿","/tweets/new") %>
    </li>
  </ul>
  </header>

  <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
  
    <%= yield %>
  </body>
</html>

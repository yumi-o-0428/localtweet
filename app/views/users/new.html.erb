<%= render "layouts/header" %>
<div class="main users-new">
  <div class="users-container">
    <div class="form-heading">新規ユーザー登録</div>
    <div class="form users-form">
      <div class="form-body">
      <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
      <%= form_for(@user,url: {controller: 'users', action: 'create'}) do |form| %>
        <p>ユーザー名</p>
        <%= form.text_field :name, class:"form_user_name"%>
        <p>メールアドレス</p>
        <%= form.text_field :email, class:"form_user_email" %>
        <p>パスワード</p>
        <%= form.password_field :password, class:"form_user_email"%>
        <input type="submit" value="新規登録">
      <% end %>
      </div>
    </div>
  </div>
</div>

<%= render "layouts/header" %>
<div class="main user-show">
  <div class="container">
    <div class="container-item">
    <div class="user">
      <% if @user.image_name %>
        <img src="<%= @user.image_name %>" width="200" height="200">
      <% else %>
        <img src="/assets/default.jpg" width="200" height="200">
      <% end %>
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <%= link_to("編集","/users/#{@user.id}/edit") %>
    </div>
  </div>
</div>
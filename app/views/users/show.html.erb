<%= render "layouts/header" %>
<div class="main user-show">
  <div class="container">
    <div class="user">
    <% if @user.image_name.present? %>
      <img src ="<%= @user.image_name %>" ,width="200", height="200">
    <% else %>
      <%= image_tag "default.jpg" ,alt:"ユーザーアイコン" ,class:"default_icon"%>
    <% end %>
      <div class= "user__profile">
        <h2><%= @user.name %></h2>
        <p><%= @user.email %></p>
        <%= link_to("プロフィールを編集","/users/#{@user.id}/edit") %>
      </div>
    </div>
  </div>
  <div class="myPage">
    <div class="myPage__list">投稿一覧</div>
  </div>
  <%= render "tweets/tweet" %>
</div>
<%= render "layouts/footer" %>
